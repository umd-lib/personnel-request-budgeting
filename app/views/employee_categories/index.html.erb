<div class="page-header">
  <h1>Employee Categories</h1>
</div>

<%= render 'shared/index_action_buttons', klass: EmployeeCategory %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= sort_link(@q, :code, 'Code') %></th>
      <th><%= sort_link(@q, :name, 'Name') %></th>
      <%= render 'shared/table_action_buttons_header' %>
    </tr>
  </thead>

  <tbody>
    <% @employee_categories.each do |employee_category| %>
      <%= content_tag :tr, id: "employee_category_#{employee_category.id}" do %>
        <td><%= employee_category.code %></td>
        <td><%= employee_category.name %></td>
        <%= render 'shared/table_action_buttons', object: employee_category %> 
      <% end %>
    <% end %>
  </tbody>
</table>
