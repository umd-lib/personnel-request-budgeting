<div class="page-header">
  <h1>Employee Types</h1>
</div>

<%= render 'shared/index_action_buttons', klass: EmployeeType %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= sort_link(@q, :code, 'Code') %></th>
      <th><%= sort_link(@q, :name, 'Name') %></th>
      <th><%= sort_link(@q, 'employee_category_code', 'Employee category') %></th>
      <%= render 'shared/table_action_buttons_header' %>
    </tr>
  </thead>

  <tbody>
    <% @employee_types.each do |employee_type| %>
      <%= content_tag :tr, id: "employee_type_#{employee_type.id}" do %>
        <td><%= employee_type.code %></td>
        <td><%= employee_type.name %></td>
        <td><%= employee_type.employee_category.code %></td>
        <%= render 'shared/table_action_buttons', object: employee_type %> 
      <% end %>
    <% end %>
  </tbody>
</table>
