<div class="page-header">
  <h1>Request Types</h1>
</div>

<%= render 'shared/index_action_buttons', klass: RequestType %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= sort_link(@q, :code, 'Code') %></th>
      <th><%= sort_link(@q, :name, 'Name') %></th>
      <%= render 'shared/table_action_buttons_header' %>
    </tr>
  </thead>

  <tbody>
    <% @request_types.each do |request_type| %>
      <%= content_tag :tr, id: "request_type_#{request_type.id}" do %>
        <td><%= request_type.code %></td>
        <td><%= request_type.name %></td>
        <%= render 'shared/table_action_buttons', object: request_type %>
      <% end %>
    <% end %>
  </tbody>
</table>
