<div class="page-header">
  <h1>Units</h1>
</div>

<%= render 'shared/index_action_buttons', klass: Unit %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= sort_link(@q, :code, 'Code') %></th>
      <th><%= sort_link(@q, :name, 'Name') %></th>
      <th><%= sort_link(@q, 'department_code', 'Department') %></th>
      <th><%= sort_link(@q, 'division_code', 'Division') %></th>
      <%= render 'shared/table_action_buttons_header' %>
    </tr>
  </thead>

  <tbody>
    <% @units.each do |unit| %>
      <%= content_tag :tr, id: "unit_#{unit.id}" do %>
        <td><%= unit.code %></td>
        <td><%= unit.name %></td>
        <td><%= unit.department.code %></td>
        <td><%= unit.department.division.code %></td>
        <%= render 'shared/table_action_buttons', object: unit %>
      <% end %>
    <% end %>
  </tbody>
</table>
