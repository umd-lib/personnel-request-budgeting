<div class="page-header">
  <h1>Users</h1>
</div>

<%= render 'shared/index_action_buttons', klass: User %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= sort_link(@q, :cas_directory_id, 'CAS Directory ID') %></th>
      <th><%= sort_link(@q, :name, 'Name') %></th>
      <%= render 'shared/table_action_buttons_header' %>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <%= content_tag :tr, id: "user_#{user.id}" do %>
        <td><%= user.cas_directory_id %></td>
        <td><%= user.name %></td>
        <%= render 'shared/table_action_buttons', object: user %> 
      <% end %>
    <% end %>
  </tbody>
</table>
