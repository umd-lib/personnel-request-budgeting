<div class='container'>

  <div class="page-header">
    <h1>Users
      <span class='pull-right'><%= link_to( "New", new_user_path, class: "btn btn-success" ) %></span>
    </h1>
  </div>
  
  <div class="btn-toolbar pagination">
    <div class='btn-group'><%= will_paginate( @users, renderer: BootstrapPagination::Rails) %></div>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>CAS Directory ID</th>
        <th>Name</th>
        <th>Admin?</th> 
        <th></th> 
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <%= content_tag :tr, id: "user_#{user.id}" do %>
          <td><%= user.cas_directory_id %></td>
          <td><%= user.name %></td>
          <td><%= user.admin? %></td> 
          <%= render 'shared/index_action_buttons', object: user %> 
        <% end %>
      <% end %>
    </tbody>

  </table>


</div>
